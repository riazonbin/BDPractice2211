<Page x:Class="BDPractice2211.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BDPractice2211.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="371*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="646*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Name"></TextBlock>
            <TextBox x:Name="tbName"></TextBox>
            <TextBlock Text="Login"></TextBlock>
            <TextBox x:Name="tbLogin"></TextBox>
            <TextBlock Text="Password"></TextBlock>
            <TextBox x:Name="tbPassword"></TextBox>
            <TextBlock Text="Role"></TextBlock>
            <TextBox x:Name="tbRole"></TextBox>
            <Button Content="Registrate!" Click="RegistrateButtonClick"></Button>
        </StackPanel>
    </Grid>
</Page>
