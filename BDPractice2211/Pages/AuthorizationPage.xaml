<Page x:Class="BDPractice2211.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BDPractice2211.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage" Background="White">

    <Grid>
        <StackPanel>
            <TextBlock Text="Login"></TextBlock>
            <TextBox x:Name="tbLogin"></TextBox>
            <TextBlock Text="Password"></TextBlock>
            <TextBox x:Name="tbPassword"></TextBox>
            <Button Content="Log in" Click="LoginButtonClick"></Button>
            <Button Content="Sign up" Click="SignUpButtonClick"></Button>
        </StackPanel>
    </Grid>
</Page>
